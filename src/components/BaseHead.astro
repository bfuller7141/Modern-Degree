---
import FacebookPixel from './FacebookPixel.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Modern Degree HVAC Services",
  description = "Modern Degree HVAC Services is a full-service heating, cooling, duct work and insulation company based in Buckeye, Arizona, serving the West Valley.",
  image = ""
} = Astro.props as Props;

const base = import.meta.env.SITE || "";
const canonicalUrl = base ? new URL(Astro.url.pathname, base).href : "";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />

<!-- Open Graph / Social Tags -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{image && <meta property="og:image" content={image} />}
<meta property="og:type" content="website" />

<!-- Security Headers via <meta> (you can also move these to Netlify headers) -->
<meta http-equiv="X-Frame-Options" content="DENY" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
<meta
  http-equiv="Content-Security-Policy"
  content="
    default-src 'self';
    script-src 'self' 'unsafe-inline' https://connect.facebook.net https://calendar.google.com;
    connect-src 'self' https://www.facebook.com https://connect.facebook.net;
    style-src 'self' 'unsafe-inline' https://use.typekit.net;
    img-src 'self' data: https://www.facebook.com;
    frame-src 'self' https://calendar.google.com;
    font-src 'self' https://use.typekit.net data:;
    preconnect-src https://use.typekit.net https://p.typekit.net;
  "
/>

<!-- Fonts -->
<link
  rel="preload"
  href="https://use.typekit.net/tlu2buf.css"
  as="style"
  onload="this.onload=null;this.rel='stylesheet';"
/>
<noscript>
  <link rel="stylesheet" href="https://use.typekit.net/tlu2buf.css" />
</noscript>
<link rel="preconnect" href="https://use.typekit.net" crossorigin />
<link rel="preconnect" href="https://p.typekit.net" crossorigin />

<link rel="stylesheet" href="/styles/root.css" />
<link rel="stylesheet" href="/styles/main-styles.css" />

<!-- Favicon -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="manifest" href="/site.webmanifest" />

<script>
!function(f,b,e,v,n,t,s)
{if(f.fbq)return;n=f.fbq=function(){n.callMethod?
n.callMethod.apply(n,arguments):n.queue.push(arguments)};
if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
n.queue=[];t=b.createElement(e);t.async=!0;
t.src=v;s=b.getElementsByTagName(e)[0];
s.parentNode.insertBefore(t,s)}(window,document,'script',
'https://connect.facebook.net/en_US/fbevents.js');

fbq('init', '1178383969914517');
fbq('track', 'PageView');

document.addEventListener('astro:page-load', function () {
  try { fbq('track', 'PageView'); } catch (e) {}
});
</script>

<noscript>
  <img height="1" width="1" style="display:none" alt="facebook pixel"
       src="https://www.facebook.com/tr?id=1178383969914517&ev=PageView&noscript=1" />
</noscript>
