---
import BaseHead from "../components/BaseHead.astro";
import NavMain from "../components/NavMain.astro";
import FooterMain from "../components/FooterMain.astro";

const formName = "winter-special-quote";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead
			title="Winter Special - FREE Mini-Split or Water Heater | Modern Degree HVAC"
			description="Get a FREE Mitsubishi mini-split system or water heater (up to $6500 value) with purchase of a new Trane HVAC system. Limited time offer from Modern Degree, your trusted West Valley HVAC experts."
			image="/images/static/winter-special-hero.webp"
		/>
		<link rel="canonical" href="https://www.moderndegreeservices.com/winter-special" />
		<style>
			/* Winter Special Page Styles */
			.winter-hero {
				background: linear-gradient(135deg, #1a365d 0%, #2d3748 50%, #1a202c 100%);
				position: relative;
				overflow: hidden;
			}

			.winter-hero::before {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M30 30l-5-5 5-5 5 5-5 5zm0 10l-5-5 5-5 5 5-5 5z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
				pointer-events: none;
			}

			.hero-content {
				position: relative;
				z-index: 1;
				padding: clamp(8rem, 12vw, 12rem) var(--section-spacing-horizontal) clamp(4rem, 6vw, 6rem);
			}

			.offer-badge {
				display: inline-block;
				background: var(--primary-500);
				color: white;
				padding: 0.5rem 1.5rem;
				border-radius: 2rem;
				font-family: var(--font-heading);
				font-size: var(--fs-bodysm);
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				margin-bottom: 1.5rem;
			}

			.hero-title {
				font-size: var(--page-title);
				font-family: var(--font-heading);
				font-weight: 700;
				color: white;
				line-height: 1.1;
				margin: 0 0 1rem 0;
			}

			.hero-title .highlight {
				color: var(--primary-500);
			}

			.hero-subtitle {
				font-size: var(--fs-bodylg);
				color: rgba(255, 255, 255, 0.9);
				max-width: 700px;
				margin: 0 0 2rem 0;
				line-height: 1.6;
			}

			.offer-value {
				display: inline-flex;
				align-items: center;
				gap: 1rem;
				background: rgba(255, 255, 255, 0.1);
				backdrop-filter: blur(10px);
				padding: 1rem 2rem;
				border-radius: 0.5rem;
				border: 1px solid rgba(255, 255, 255, 0.2);
				margin-bottom: 2rem;
			}

			.offer-value-text {
				font-family: var(--font-heading);
				font-size: var(--fs-bodyxl);
				font-weight: 700;
				color: var(--primary-500);
			}

			.offer-value-label {
				font-size: var(--fs-body);
				color: rgba(255, 255, 255, 0.9);
			}

			/* Trust Badges */
			.trust-section {
				background: var(--accent-500);
				padding: var(--section-spacing-vertical-sm) var(--section-spacing-horizontal);
			}

			.trust-badges {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 2rem;
			}

			.trust-badge {
				display: flex;
				align-items: center;
				gap: 0.75rem;
				background: white;
				padding: 1rem 1.5rem;
				border-radius: 0.5rem;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
			}

			.trust-badge-icon {
				width: 2.5rem;
				height: 2.5rem;
				display: flex;
				align-items: center;
				justify-content: center;
				background: var(--primary-100);
				border-radius: 50%;
				color: var(--primary-500);
			}

			.trust-badge-icon svg {
				width: 1.25rem;
				height: 1.25rem;
			}

			.trust-badge-text {
				font-family: var(--font-heading);
				font-weight: 600;
				color: var(--secondary-500);
				font-size: var(--fs-bodysm);
			}

			/* Offer Details Section */
			.offer-section {
				background: white;
				padding: var(--section-spacing-vertical-md) var(--section-spacing-horizontal);
			}

			.offer-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				margin-top: 3rem;
			}

			.offer-card {
				background: var(--accent-500);
				padding: 2rem;
				border-radius: 0.75rem;
				text-align: center;
				border: 2px solid transparent;
				transition: all 0.3s ease;
			}

			.offer-card:hover {
				border-color: var(--primary-500);
				transform: translateY(-4px);
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
			}

			.offer-card-icon {
				width: 4rem;
				height: 4rem;
				margin: 0 auto 1rem;
				background: var(--primary-100);
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.offer-card-icon svg {
				width: 2rem;
				height: 2rem;
				color: var(--primary-500);
			}

			.offer-card-title {
				font-family: var(--font-heading);
				font-size: var(--title-xs);
				font-weight: 600;
				color: var(--secondary-500);
				margin: 0 0 0.5rem 0;
			}

			.offer-card-value {
				font-family: var(--font-heading);
				font-size: var(--title-sm);
				font-weight: 700;
				color: var(--primary-500);
				margin: 0 0 0.5rem 0;
			}

			.offer-card-desc {
				font-size: var(--fs-bodysm);
				color: var(--gray-700);
				margin: 0;
			}

			/* Form Section */
			.form-section {
				background: linear-gradient(to bottom, var(--secondary-500), var(--gray-800));
				padding: var(--section-spacing-vertical-md) var(--section-spacing-horizontal);
				border-top: 0.5rem solid var(--primary-500);
			}

			.form-container {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: start;
			}

			.form-info {
				color: white;
			}

			.form-info-title {
				font-size: var(--section-title);
				font-family: var(--font-heading);
				font-weight: 500;
				color: white;
				margin: 0 0 1rem 0;
			}

			.form-info-title .highlight {
				color: var(--primary-500);
				font-weight: 700;
			}

			.form-info-text {
				font-size: var(--fs-body);
				color: rgba(255, 255, 255, 0.9);
				line-height: 1.6;
				margin: 0 0 2rem 0;
			}

			.form-benefits {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.form-benefits li {
				display: flex;
				align-items: flex-start;
				gap: 0.75rem;
				margin-bottom: 1rem;
				font-size: var(--fs-body);
				color: rgba(255, 255, 255, 0.9);
			}

			.form-benefits li svg {
				flex-shrink: 0;
				width: 1.5rem;
				height: 1.5rem;
				color: var(--primary-500);
				margin-top: 0.25rem;
			}

			/* Winter Form Styles */
			.winter-form {
				background: white;
				padding: 2.5rem;
				border-radius: 0.75rem;
				box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
			}

			.form-title {
				font-family: var(--font-heading);
				font-size: var(--title-xs);
				font-weight: 600;
				color: var(--secondary-500);
				margin: 0 0 1.5rem 0;
				text-align: center;
			}

			.hidden {
				display: none;
			}

			.form-row {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 1rem;
				margin-bottom: 1rem;
			}

			.form-group {
				display: flex;
				flex-direction: column;
			}

			.form-group.full-width {
				grid-column: 1 / -1;
			}

			.form-label {
				color: var(--secondary-500);
				font-weight: 600;
				margin-bottom: 0.5rem;
				font-size: 0.875rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

			.form-input {
				padding: 1rem;
				border: 2px solid var(--gray-200);
				font-family: var(--font-body);
				color: var(--secondary-500);
				border-radius: 8px;
				font-size: 1rem;
				transition: all 0.3s ease;
				background: white;
			}

			.form-input:hover,
			.form-input:focus {
				outline: none;
				border-color: var(--primary-500);
			}

			/* Radio Group Styles */
			.radio-group {
				display: flex;
				gap: 1.5rem;
				margin-top: 0.5rem;
			}

			.radio-option {
				display: flex;
				align-items: center;
				gap: 0.5rem;
				cursor: pointer;
			}

			.radio-option input[type="radio"] {
				width: 1.25rem;
				height: 1.25rem;
				accent-color: var(--primary-500);
				cursor: pointer;
			}

			.radio-option span {
				font-size: 1rem;
				color: var(--secondary-500);
			}

			/* Checkbox Styles */
			.checkbox-group {
				display: flex;
				align-items: flex-start;
				gap: 0.75rem;
				margin-top: 1rem;
				padding: 1rem;
				background: var(--gray-100);
				border-radius: 8px;
			}

			.checkbox-group input[type="checkbox"] {
				width: 1.25rem;
				height: 1.25rem;
				accent-color: var(--primary-500);
				cursor: pointer;
				flex-shrink: 0;
				margin-top: 0.125rem;
			}

			.checkbox-label {
				font-size: 0.875rem;
				color: var(--gray-700);
				line-height: 1.5;
			}

			.form-submit {
				width: 100%;
				padding: 1.25rem 2rem;
				font-size: 1.125rem;
				margin-top: 1.5rem;
				border: none;
				cursor: pointer;
				background: var(--primary-500);
				color: white;
				font-family: var(--font-heading);
				border-radius: 0.5rem;
				transition: all 0.3s ease;
			}

			.form-submit:hover {
				background: var(--primary-600);
				transform: translateY(-2px);
				box-shadow: 0 4px 12px rgba(242, 142, 34, 0.4);
			}

			/* Terms Section */
			.terms-section {
				background: var(--accent-500);
				padding: var(--section-spacing-vertical-md) var(--section-spacing-horizontal);
			}

			.terms-box {
				background: white;
				padding: 2rem;
				border-radius: 0.75rem;
				border-left: 4px solid var(--primary-500);
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
			}

			.terms-title {
				font-family: var(--font-heading);
				font-size: var(--title-xs);
				font-weight: 600;
				color: var(--secondary-500);
				margin: 0 0 1rem 0;
			}

			.terms-list {
				list-style: disc;
				padding-left: 1.5rem;
				margin: 0;
			}

			.terms-list li {
				font-size: var(--fs-bodysm);
				color: var(--gray-700);
				margin-bottom: 0.5rem;
				line-height: 1.6;
			}

			.terms-deadline {
				display: inline-block;
				background: var(--error-200);
				color: var(--error-500);
				padding: 0.25rem 0.75rem;
				border-radius: 4px;
				font-weight: 600;
				margin-top: 1rem;
			}

			/* Mobile Sticky CTA */
			.mobile-sticky-cta {
				display: none;
				position: fixed;
				bottom: 0;
				left: 0;
				right: 0;
				background: var(--secondary-500);
				padding: 1rem;
				box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
				z-index: 1000;
			}

			.mobile-sticky-cta a {
				display: block;
				width: 100%;
				padding: 1rem 2rem;
				background: var(--primary-500);
				color: white;
				text-align: center;
				text-decoration: none;
				font-family: var(--font-heading);
				font-size: 1.125rem;
				font-weight: 600;
				border-radius: 0.5rem;
				transition: all 0.3s ease;
			}

			.mobile-sticky-cta a:hover {
				background: var(--primary-600);
			}

			/* Add padding to footer on mobile to account for sticky CTA */
			@media (max-width: 768px) {
				.mobile-sticky-cta {
					display: block;
				}

				footer {
					padding-bottom: 5rem;
				}
			}

			/* Responsive Styles */
			@media (max-width: 1099px) {
				.form-container {
					grid-template-columns: 1fr;
					gap: 3rem;
				}
			}

			@media (max-width: 768px) {
				.trust-badges {
					flex-direction: column;
					align-items: center;
				}

				.trust-badge {
					width: 100%;
					max-width: 300px;
					justify-content: center;
				}

				.form-row {
					grid-template-columns: 1fr;
				}

				.offer-value {
					flex-direction: column;
					text-align: center;
				}
			}

			@media (max-width: 499px) {
				.winter-form {
					padding: 1.5rem;
				}

				.radio-group {
					flex-direction: column;
					gap: 0.75rem;
				}
			}
		</style>
	</head>
	<body>
		<header>
			<NavMain />
		</header>
		<main>
			<!-- Hero Section -->
			<section class="winter-hero" role="banner">
				<div class="hero-content">
					<div class="container">
						<span class="offer-badge">Limited Time Offer</span>
						<h1 class="hero-title">
							FREE Mini-Split System<br />
							<span class="highlight">or Water Heater</span>
						</h1>
						<p class="hero-subtitle">
							Purchase a new Trane HVAC system ($12,000.00 minimum purchase) to be installed by Modern Degree LLC, and receive a FREE Mitsubishi mini-split system or water heater, or $1,500 off your installation!
						</p>
						<div class="offer-value">
							<span class="offer-value-text">Up to $6,500</span>
							<span class="offer-value-label">in FREE value</span>
						</div>
						<div class="wrapper-button">
							<a
								href="#contact-form"
								class="button-primary"
								aria-label="Claim Your Free Offer"
							>
								Claim Your Offer
							</a>
							<a
								href="tel:+14807192917"
								class="button-secondary"
								aria-label="Call Modern Degree HVAC Services"
							>
								Call (480) 719-2917
							</a>
						</div>
					</div>
				</div>
			</section>

			<!-- Trust Badges Section -->
			<section class="trust-section">
				<div class="container">
					<div class="trust-badges">
						<div class="trust-badge">
							<div class="trust-badge-icon">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
								</svg>
							</div>
							<span class="trust-badge-text">Veteran Owned</span>
						</div>
						<div class="trust-badge">
							<div class="trust-badge-icon">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
									<path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
								</svg>
							</div>
							<span class="trust-badge-text">West Valley Owned & Operated</span>
						</div>
						<div class="trust-badge">
							<div class="trust-badge-icon">
								<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
								</svg>
							</div>
							<span class="trust-badge-text">5-Star Google Rating</span>
						</div>
					</div>
				</div>
			</section>

			<!-- Offer Details Section -->
			<section class="offer-section">
				<div class="container">
					<div class="title-wrapper">
						<h2 class="title-section">
							Choose Your <span class="title-section highlight">FREE Upgrade</span>
						</h2>
						<img src="/images/deco/dashes.svg" alt="" class="deco-dashes" />
					</div>
					<div class="offer-grid">
						<div class="offer-card">
							<div class="offer-card-icon">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
							<h3 class="offer-card-title">Mitsubishi Mini-Split</h3>
							<p class="offer-card-value">FREE</p>
							<p class="offer-card-desc">Up to 24000 BTU system installed - perfect for garages, additions, or problem rooms</p>
						</div>
						<div class="offer-card">
							<div class="offer-card-icon">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
