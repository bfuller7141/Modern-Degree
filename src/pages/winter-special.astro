---
import BaseHead from "../components/BaseHead.astro";
import NavMain from "../components/NavMain.astro";
import ColumnRightCards from "../components/ColumnRightCards.astro";
import TestimonialGrid3 from "../components/TestimoniaGrid3.astro";
import FormPromo from "../components/FormPromo.astro";
import MainCTA from "../components/MainCTA.astro";
import FooterMain from "../components/FooterMain.astro";
import LogoBannerCenter from "../components/LogoBannerCenter.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title="About Modern Degree Services — West Valley HVAC Team"
      description="Learn how Modern Degree Services became Buckeye and West Valley’s trusted HVAC provider. Our licensed, local team delivers AC repair, installation, ductwork, insulation and 24/7 emergency service with clear pricing and fast response."
      image=""
    />
    <link rel="canonical" href="https://www.moderndegreeservices.com/about" />
  </head>

  <body>
    <header>
      <NavMain />
    </header>

    <main id="main-content">
      <!-- Hero Section -->
      <section class="hero" role="banner" aria-labelledby="promo-hero-title">
        <div class="padding-hero large-bottom">
          <div class="container">
            <div class="wrapper-center">
              <p class="promo-badge">Limited Time Offer</p>
              <h1 id="promo-hero-title" class="title-page center">
                <span class="title-page highlight">Get a FREE</span> Mini-Split <br /> 
                or Water Heater
              </h1>
              <p class="body-text center short">
                For a limited time, get up to $6,500 in total value when you purchase a new Trane HVAC system. 
              </p>
              <p class="body-text center short">
                <strong>Prefer instant savings?</strong> Take $1,500 off your installation instead. A $12,000 minimum purchase is required. Terms apply.
              </p>
              <div class="wrapper-button">
                <a href="#claim-offer" class="button-primary">
                  Claim This Offer
                </a>
              </div>
              <ul class="service-list" aria-label="Our Services">
                  <li>Veteran Owned</li>
                  <li>Locally Owned and Operated</li>
                  <li>Trusted By Thousands</li>
              </ul>
              <LogoBannerCenter />
            </div>
          </div>
        </div>
      </section>

      <section>
        <div class="padding-normal small-top">
          <div class="container">
            <ColumnRightCards
              title="How This Limited-Time"
              titleSpan="Special Offer Works"
              description="When you purchase a new Trane HVAC system with Modern Degree Services, you get to choose one of three winter bonuses:"
              primaryLink="#claim-offer"
              primaryText="Claim This Offer"
              imageSource="/images/static/trane-ac-unit.webp"
              imageAlt="Modern Degree HVAC technician installing rooftop ductwork beside a Bryant outdoor air conditioning unit"
              features={[
                { title: "Option 1: FREE Mitsubishi Mini-Split", desc: "Mitsubishi mini-split system (up to 24,000 BTU), perfect for garages, sunrooms, or hard-to-cool spaces. Electrical panel space and a run under 30 feet are required for standard installation." },
                { title: "Option 2: FREE Water Heater", desc: "Upgrade your home's hot water with a free standard water heater installation, giving you reliable efficiency for years to come. Tankless units are not included in this offer." },
                { title: "Option 3: $1,500 Off Installation", desc: "Keep it simple and save $1,500 off your new Trane HVAC system installation." }
              ]}
            />
          </div>
        </div>
      </section>

      <section id="claim-offer">
        <div class="padding-normal small-top">
          <div class="container">
            <div class="title-wrapper">
              <h2 id="offer-form" class="title-section">
                  Schedule Your Free Estimate
              </h2>
              <p class="body-text center short">
                Fill out the form below to claim this limited-time offer and schedule your free estimate. A member of our team will reach out to set up an appointment and discuss the next steps.
                <img
                  src="/images/deco/dashes.svg"
                  alt=""
                  aria-hidden="true"
                  role="presentation"
                  class="deco-dashes"
                />
            </div>
            <FormPromo />
          </div>
        </div>
      </section>

      <section role="region" aria-labelledby="testimonials-title">
        <div class="padding-normal">
          <div class="container">
            <div class="title-wrapper">
              <h2 id="testimonials-title" class="title-section">
                Trusted By Thousands Across the Valley
              </h2>
              <img
                src="/images/deco/dashes.svg"
                alt=""
                aria-hidden="true"
                role="presentation"
                class="deco-dashes"
              />
            </div>
            <TestimonialGrid3 />
            <div class="wrapper-button center">
              <a href="#claim-offer" class="button-secondary center"> 
                Claim The Limited-Time Offer
              </a>
            </div>
          </div>
        </div>
      </section>

      <section>
        <div class="padding-normal small-top large-bottom">
          <div class="container">
            <MainCTA />
          </div>
        </div>
      </section>
    </main>

    <FooterMain />

    <!-- Mobile Sticky CTA -->
    <div class="mobile-sticky-cta" aria-hidden="true">
      <a href="#claim-offer" class="sticky-button">
        Claim This Offer
      </a>
    </div>

  </body>
</html>

<style>
  .promo-badge {
    display: inline-block;
    background: var(--primary-500);
    color: var(--white);
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.5rem 1.25rem;
    border-radius: 2rem;
    margin-bottom: 1.5rem;
  }
  .sticky-button {
    display: block;
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, var(--primary-500) 0%, #e17d1c 100%);
    color: var(--white);
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    border-radius: 0.5rem;
    box-shadow: 0 4px 12px rgba(242, 142, 34, 0.4);
  }
  .mobile-sticky-cta {
      display: block;
  }
  .mobile-sticky-cta {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: var(--white);
    box-shadow: 0 -4px 16px rgba(0, 0, 0, 0.15);
    z-index: 999;
  }
  .sticky-button {
    display: block;
    width: 100%;
    padding: 1rem;
    box-sizing: border-box;
    background: linear-gradient(135deg, var(--primary-500) 0%, #e17d1c 100%);
    color: var(--white);
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    border-radius: 0.5rem;
    box-shadow: 0 4px 12px rgba(242, 142, 34, 0.4);
  }
  .mobile-sticky-cta {
    display: none;
    position: fixed;
    box-sizing: border-box;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: var(--white);
    box-shadow: 0 -4px 16px rgba(0, 0, 0, 0.15);
    z-index: 999;
  }

  @media (max-width: 768px) {
    .mobile-sticky-cta {
      display: block;
    }
    body {
      padding-bottom: 4rem;
    }
    .service-list {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }
    .service-list li + li::before {
      content: "";
      display: block;
      width: 2rem;
      height: 2px;
      background-color: var(--secondary-500);
      margin: 0 auto 0.75rem;
    }
  }
</style>

<script is:inline>
  // Smooth scroll for anchor links
  document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", (e) => {
      e.preventDefault();
      const currentAnchor = e.currentTarget;
      if (!(currentAnchor instanceof HTMLAnchorElement)) return;
      const href = currentAnchor.getAttribute("href");
      const target = href ? document.querySelector(href) : null;
      if (target) {
        target.scrollIntoView({
          behavior: "smooth",
          block: "start",
        });
      }
    });
  });
  });

  // Hide sticky CTA when form is in view
  document.addEventListener('DOMContentLoaded', () => {
  const formSection = document.getElementById("claim-offer");
  const stickyCta = document.querySelector(".mobile-sticky-cta");

  if (formSection && stickyCta instanceof HTMLElement) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            stickyCta.style.transform = "translateY(100%)";
            stickyCta.style.transition = "transform 0.3s ease";
          } else {
            stickyCta.style.transform = "translateY(0)";
          }
        });
      },
      { threshold: 0.1 }
    );

    observer.observe(formSection);
  }
  });
</script>