---
import BaseHead from "../components/BaseHead.astro";
import NavMain from "../components/NavMain.astro";
import ServiceBento from "../components/ServiceBento.astro";
import ModCTA from "../components/ModCTA.astro";
import ColumnRight from "../components/ColumnRight.astro";
import ModFeature from "../components/ModFeature.astro";
import FAQ from "../components/FAQ.astro";
import MainCTA from "../components/MainCTA.astro";
import FooterMain from "../components/FooterMain.astro";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead
		title=""
		description=""
		image=""
	/>
	<body>
		<header>
			<NavMain />
		</header>
		<main>
			<section class="hero" role="banner">
				<div class="padding-hero">
					<div class="container">
						<div class="wrapper-column">
							<div class="wrapper large ">
								<h1 class="title-page">
									The West Valley's <br />
									<span class="title-page highlight">HVAC Experts</span>
								</h1>
								<p class="body-text">
									We keep your home comfy all year round. Our licensed team handles AC repair, furnace tune-ups, duct sealing and insulation installs. Serving Buckeye, Goodyear, Litchfield Park, Surprise, Peoria, Glendale, Avondale, Sun City West and El Mirage. Fast, honest service with free, no-obligation quotes.
								</p>
								<div class="wrapper-button">
									<a
										href="/get-started"
										class="button-primary"
										aria-label="Get Started with Modern Degree HVAC Services"
									>
										Request a Free Quote
									</a>
									<a
										href="/services"
										class="button-secondary"
										aria-label="Call Modern Degree HVAC Services"
									>
										Call Us Today
									</a>
								</div>
								<ul class="service-list" aria-label="Our Services">
									<li>Cooling</li>
									<li>Heating</li>
									<li>Duct Work</li>
									<li>Insulation</li>
								</ul>
							</div>
							<div class="wrapper small">
								<img
									src="/images/static/ac-testing.webp"
									alt="Modern Degree HVAC Services"
									class="image-hero"
									width="693"
									height="825"
								/>
							</div>
						</div>
					</div>
				</div>
			</section>
			<section class="reviews" role="region">
				<div class="padding-dark">
					<div class="container">
						<div class="wrapper-column center">
							<div class="wrapper large">
								<h2 class="title-section white">
									Top-Rated HVAC <span class="title-section highlight">Services</span>
								</h2>
								<div class="logo-wrapper">
									<a class="logo-link" href="https://www.google.com/maps/place/Modern+Degree+HVAC+Services/@33.444123,-112.446789,15z/data=!4m2!3m1!1s0x0:0x8f5c6b7d9e4f8c2a" target="_blank" rel="noopener noreferrer">
										<img
											src="/images/logos/google-reviews.svg"
											alt="Google Reviews"
											class="logo-image"
											width="170"
											height="auto"
										/>
									</a>
									<a class="logo-link" href="https://www.google.com/maps/place/Modern+Degree+HVAC+Services/@33.444123,-112.446789,15z/data=!4m2!3m1!1s0x0:0x8f5c6b7d9e4f8c2a" target="_blank" rel="noopener noreferrer">
										<img
											src="/images/logos/nextdoor-reviews.svg"
											alt="Nextdoor Reviews"
											class="logo-image"
											width="228"
											height="auto"
										/>
									</a>
									<a class="logo-link" href="https://www.google.com/maps/place/Modern+Degree+HVAC+Services/@33.444123,-112.446789,15z/data=!4m2!3m1!1s0x0:0x8f5c6b7d9e4f8c2a" target="_blank" rel="noopener noreferrer">
										<img
											src="/images/logos/facebook-reviews.svg"
											alt="Facebook Reviews"
											class="logo-image"
											width="220"
											height="auto"
										/>
									</a>
								</div>
								<div class="wrapper-button">
									<a
										href=""
										class="button-primary"
										aria-label="Leave a Review for Modern Degree HVAC Services"
										target="_blank"
										rel="noopener noreferrer"
									>
										Leave a Review
									</a>
								</div>
							</div>
							<div class="wrapper small">
								<p class="review-stars">
									★ ★ ★ ★ ★
								</p>
								<p class="body-text white">
									This is the second time I've had Modern Degree out to fix my AC over the last 2 years. They fit me into their schedule quickly and from first call to onsite service they have been thoughtful, efficient, and reliable. Modern Degree is my "go to" AC company!
								</p>
								<p class="body-text white">
									<span class="bold-text">Carla Howard</span>
								</p>
							</div>
						</div>
					</div>
				</div>
			</section>
			<section class="target-bg">
				<div class="padding-normal">
					<div class="container">
						<div class="title-wrapper">
							<h2 class="title-section">
								Your Comfort is Our Priority</span>
							</h2>
							<img
								src="/images/deco/dashes.svg"
								alt=""
								class="deco-dashes"
							/>
						</div>
						<ServiceBento />
						<ModCTA />
					</div>
				</div>
			</section>
			<section>
				<div class="padding-normal small-top">
					<div class="container">
						<ColumnRight
							title="Why Arizona Loves"
							titleSpan="Modern Degree"
							description="We know HVAC inside out. Our licensed team handles cooling, heating, ductwork and insulation with care. You get clear pricing, fast response and real peace of mind."
							primaryLink="/get-started"
							primaryAria="Get Started with Modern Degree HVAC Services"
							primaryText="Request a Free Quote"
							secondaryLink="/services"
							secondaryAria="Learn More About Our Services"
							secondaryText="Call Us Today"
							imageSource="/images/static/md-ac-repair.webp"
							imageAlt="Modern Degree HVAC Services"
							features={[
								{ title: "Local West Valley Experts", desc: "Born and raised in your community, so we get your climate and your comfort needs." },
								{ title: "Quality Craftsmanship", desc: "We use top tools, premium parts and proven techniques for lasting comfort." },
								{ title: "24/7 Emergency Service", desc: "Here 24/7 for any HVAC emergency Valley wide." }
							]}
						/>
					</div>
				</div>
			</section>
			<ModFeature />
			<section>
				<div class="padding-normal">
					<div class="container">
						<div class="title-wrapper">
							<h2 class="title-section">
								Frequently Asked Questions
							</h2>
							<img
								src="/images/deco/dashes.svg"
								alt=""
								class="deco-dashes"
							/>
						</div>
						<FAQ items={[
							{ question: "What areas do you serve?", answer: "We serve Buckeye, Goodyear, Litchfield Park, Surprise, Peoria, Glendale, Avondale, Sun City West, and El Mirage." },
							{ question: "What HVAC services do you offer?", answer: "We provide AC repair, furnace tune-ups, duct sealing, insulation installs, and more." },
							{ question: "Are your technicians licensed?", answer: "Yes, all our technicians are fully licensed and experienced." },
							{ question: "Do you offer free quotes?", answer: "Absolutely! We provide free, no-obligation quotes for all services." }
						]} />
					</div>
				</div>
			</section>
			<section>
				<div class="padding-normal">
					<div class="container">
						<MainCTA />
					</div>
				</div>
			</section>
		</main>
		<FooterMain />
	</body>
</html>
